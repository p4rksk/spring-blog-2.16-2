{{> layout/header}}

<div class="container p-5">

    <!-- 요청을 하면 localhost:8080/join POST로 요청됨
    username=사용자입력값&password=사용자값&email=사용자입력값 -->

    <div class="card">
        <div class="card-header"><b>회원가입을 해주세요</b></div>
        <div class="card-body">
            <form action="/join" method="post" >
                <div class="mb-3">
                    <input id="username" type="text" class="form-control" placeholder="Enter username" name="username" onkeyup="usernameSameCheck()">
<!--                    <button type ="button" class="btn btn-warning" onclick="usernameSameCheck()">아이디 중복체크</button>-->
                </div>

                <div class="mb-3">
                    <input type="password" class="form-control" placeholder="Enter password" name="password" required="required">
<!--required                    -->
                </div>
                <div class="mb-3">
                    <input type="email" class="form-control" placeholder="Enter email" name="email" required="required">
                </div>
                <button type="submit" class="btn btn-primary form-control">회원가입</button>
            </form>
        </div>
    </div>
</div>

<script>
    let isSameCheck = false;

    // 중복체크를 안하고 회원가입을 실행했을 때 이코드 실행
    //   usernameSameCheck를 안하고 넘어 갔을 때 valid함수가 발생한다.
    // function valid(){
    //     if (isSameCheck == false){
    //         alert("아이디 중복 체크를 해야합니다.")
    //     }
    //     return isSameCheck;
    // }
    //


    function usernameSameCheck() {
        let username = $("#username").val();

        if(username.trim() === "") {
            alert("아이디를 입력해야 합니다");
            return; // 공백으로 중복 체크하는것 막기
        }




        $.ajax({
            url: "/api/username-same-check?username=" + username,
            type: "get",
        }).done((res) => {
            console.log(res)
            if (res.body == null) {
                isSameCheck = true;
                // alert("사용가능한 아이디 입니다.");
            } else {
                isSameCheck = false;
                alert("동일한 아이디가 존재합니다");
            }
            console.log(res)
        }).fail((res) => {
            alert(res.responseJSON.msg)
        });
    }
</script>

